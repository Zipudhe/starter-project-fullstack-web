{
  "name": "starter-project",
  "version": "1.2.0",
  "description": "Monorepo of my starter project for fullstack web projects using React.js, Express.js, Sequelize & PostgreSQL",
  "main": "index.js",
  "repository": "git@github.com:rafael-g-depaulo/starter-project-express-react-sequelize-pgsql.git",
  "author": "Rafael G. de Paulo <rafael.g.depaulo@gmail.com>",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "libs/*",
    "apps/*"
  ],
  "scripts": {
    "build": "yarn && ${BUILD_SCRIPT:-yarn build:all}",
    "build:all": "yarn build:libs && yarn build:apps",
    "build:libs": "preconstruct build",
    "build:libs:watch": "yarn nodemon --exec 'yarn build:libs' --watch libs/ --ignore 'libs/**/dist/'",
    "build:apps": "yarn build:client & yarn build:api & yarn build:strapi",
    "build:api": "yarn workspace @starter-project/api run build",
    "build:client": "yarn workspace @starter-project/client run build",
    "build:strapi": "yarn workspace @starter-project/strapi run build",
    "clean": "yarn clean:client && yarn clean:api",
    "clean:api": "rm -rf ./server/build && mkdir ./server/build",
    "clean:client": "rm -rf ./client/build && mkdir ./client/build",
    "start": "yarn start:client",
    "start:api": "yarn workspace @starter-project/api run start",
    "start:client": "yarn workspace @starter-project/client run start",
    "start:strapi": "yarn workspace @starter-project/strapi run start",
    "test": "jest",
    "test:api": "jest server",
    "test:client": "jest client",
    "watch": "jest --watch",
    "watch:client": "jest --watch client",
    "watch:api": "jest --watch server"
  },
  "devDependencies": {
    "@babel/cli": "^7.10.5",
    "@babel/core": "^7.11.0",
    "@babel/preset-env": "^7.11.0",
    "@babel/preset-react": "^7.10.4",
    "@babel/preset-typescript": "^7.10.4",
    "@testing-library/jest-dom": "^5.11.2",
    "babel-core": "7.0.0-bridge.0",
    "babel-jest": "^24.9.0",
    "babel-loader": "^8.1.0",
    "babel-plugin-styled-components": "^1.11.1",
    "jest": "^24.9.0",
    "jest-fetch-mock": "^3.0.3",
    "lerna": "^3.22.1",
    "typescript": "^4.0.2"
  },
  "engines": {
    "node": "12.x",
    "yarn": "1.x"
  },
  "preconstruct": {
    "packages": [
      "libs/*"
    ]
  },
  "dependencies": {
    "@preconstruct/cli": "^1.1.20"
  }
}
