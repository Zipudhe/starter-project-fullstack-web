{
  "name": "starter-project-express-react-sequelize-pgsql",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "start": "if-env NODE_ENV=production && yarn start:prod || yarn start:dev",
    "dev": "yarn start:dev",
    "prod": "yarn start:prod",
    "start:dev": "nodemon --exec babel-node --ignore './client/' -r ./node_modules/dotenv/config --presets @babel/env ./server/index.js",
    "start:prod": "yarn serve",
    "serve": "node -r dotenv/config build",
    "build": "yarn build:client && yarn build:server && yarn build:db",
    "build:client": "yarn install:client && cd client && yarn build && cd ..",
    "build:server": "yarn install:server && ./node_modules/.bin/babel ./server -d ./build -s",
    "build:db": "yarn install:server && yarn db:migrate",
    "install-deps": "yarn install:client && yarn install:server",
    "install:client": "cd client && yarn install --production=true && cd ..",
    "install:server": "yarn install --production=true",
    "clean": "yarn clean:client && yarn clean:server",
    "clean:server": "rm -rf build && mkdir build",
    "clean:client": "cd client && rm -rf ./build && cd ..",
    "db:create": "./node_modules/.bin/sequelize db:create",
    "db:drop": "./node_modules/.bin/sequelize db:drop",
    "db:migrate": "./node_modules/.bin/sequelize db:migrate",
    "db:seed": "./node_modules/.bin/sequelize db:seed",
    "db:setup": "./node_modules/.bin/sequelize db:create && yarn db:migrate",
    "db:reset": "yarn db:drop && yarn db:setup"
  },
  "dependencies": {
    "@babel/cli": "^7.10.5",
    "@babel/preset-env": "^7.10.4",
    "@babel/register": "^7.10.4",
    "babel-plugin-module-resolver": "^4.0.0",
    "body-parser": "^1.19.0",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "if-env": "^1.0.4",
    "jsonwebtoken": "^8.5.1",
    "pg": "^7.18.1",
    "pg-hstore": "^2.3.3",
    "sequelize": "^5.21.4",
    "sequelize-cli": "^6.2.0"
  },
  "devDependencies": {
    "@babel/core": "^7.8.4",
    "@babel/node": "^7.8.4",
    "nodemon": "^2.0.2"
  }
}
