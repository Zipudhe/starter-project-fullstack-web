{
  "extends": "../../tsconfig.json",
  "compilerOptions": {

    // baseUrl for absolute imports
    "baseUrl": "src",

    // module import
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",

    // buil/source file location
    "rootDir": "./src",
    "outDir": "./dist",

    // optional typescript stuff
    "skipLibCheck": true,
    "strict": true,

    // typeorm config
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
  },
  
  "include": [
    "src",
  ],
  "exclude": [
    "**/*.test.ts",
  ],
}
