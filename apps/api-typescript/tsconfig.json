{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",

    "rootDir": "./src",
    "outDir": "./dist",

    "strict": true,
    "pretty": true,
    "sourceMap": true,

    "skipLibCheck": true,

    "baseUrl": "src",
    "paths": {
      "Middlewares/*": [ "src/Middlewares/*" ],
      "Utils/*": [ "src/Utils/*" ],
      "Db/*": [ "src/Db/*" ],
    },

    // typeorm config
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "lib": [
      "es5",
      "es6"
    ],
  },
  "include": [
    "src",
  ],
  "exclude": [
    "**/*.test.ts",
  ],

}
