{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",

    "rootDir": "./src",
    "outDir": "./dist",

    "strict": true,
    "pretty": true,
    "sourceMap": true,

    "skipLibCheck": true,

    "baseUrl": "src",
    "paths": {
      "Middlewares/*": [ "src/Middlewares/*" ],
      "Utils/*": [ "src/Utils/*" ],
    }
  },
  "include": [
    "src",
  ]
}
